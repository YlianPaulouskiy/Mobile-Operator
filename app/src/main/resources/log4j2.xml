<?xml version="1.0" encoding="UTF-8"?>
<Configuration loggerName="" append="False">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%level %-100c - %msg%n"/>
        </Console>

        <File name="File" fileName="observeWork.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %-100c{1.5} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
            <Root level="info">
                <AppenderRef ref="Console"/>
                <AppenderRef ref="File"/>
            </Root>
    </Loggers>

</Configuration>